{
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@assets": "./assets",
          "@components": "./src/components",
          "@context": "./src/context",
          "@lib": "./src/lib",
          "@utils": "./src/utils",
          "@src": "./src"
        }
      }
    ],
    "babel-plugin-styled-components"
  ],
  "presets": ["module:metro-react-native-babel-preset"]
}
